{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"allowJs": true,
		"sourceMap": true,
		"rootDir": ".",
		"outDir": "dist"
	},
	"include": [
		"src/**/*.ts", // include TypeScript files
		"users.json" // include users.json file
	]
}
